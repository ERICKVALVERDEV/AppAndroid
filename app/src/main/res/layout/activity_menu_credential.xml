<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e1d49"
    android:orientation="vertical"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_ipsp"
        android:layout_marginTop="-50dp"
        />

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/border_image"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/txtNombreEmpleado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erick Joel Valverde Villalva"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/txtCargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROGRAMADOR"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/txtDepartamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TECNOLOGÍA Y MONITORIO"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/txtCedula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C.I 093499635"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        />

</LinearLayout>